<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>User</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Rate</th>
          </tr>
        </thead>
        <tbody>
          <% if @user.present? %>
            <tr>
              <td><%= @user.profile.try(:fullname) %></td>
              <td><%= @user.email %></td>
              <td>2</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
